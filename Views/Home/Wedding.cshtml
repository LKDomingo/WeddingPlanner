
@model Wedding

<div class="d-flex justify-content-between align-items-center">
    <h1 class="display-4">Plan Your Wedding</h1>
    <div>
        <a class="mx-2" href="/Dashboard">Dashboard</a>
        <a class="mx-2" href="/">Log Out</a>
    </div>
</div>
    <div class="row mt-4">
        <form asp-action="CreateWedding" asp-controller="Home" method="post" class="col-5">
            <input type="hidden" asp-for="CreatorId" value="@ViewBag.CreatorId">
            <div class="form-group d-flex justify-content-between align-items-center">
                <label for="Wedder1">Wedder One</label>
                <input asp-for="Wedder1">
            </div>
            <small><span asp-validation-for="Wedder1" class="text-danger"></span></small>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <label for="Wedder2">Wedder Two</label>
                <input asp-for="Wedder2">
            </div>
            <small><span asp-validation-for="Wedder2" class="text-danger"></span></small>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <label for="Date">Date:</label>
                <input asp-for="Date" type="date">
            </div>
            <small><span asp-validation-for="Date" class="text-danger"></span></small>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <label for="Address">Wedding Address</label>
                <input asp-for="Address">
            </div>
            <small><span asp-validation-for="Address" class="text-danger"></span></small>
            <div class="mt-4">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>